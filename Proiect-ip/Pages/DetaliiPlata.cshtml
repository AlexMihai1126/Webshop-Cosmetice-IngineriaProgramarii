@page
@model Proiect_ip.Pages.DetaliiPlataModel
@{
    ViewData["Title"] = "Detalii Plată";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <form method="post">
                <div class="mb-3">
                    <label for="Nume" class="form-label">Nume</label>
                    <input type="text" id="Nume" name="Nume" class="form-control" value="@Model.Nume" required />
                </div>

                <div class="mb-3">
                    <label for="Prenume" class="form-label">Prenume</label>
                    <input type="text" id="Prenume" name="Prenume" class="form-control" value="@Model.Prenume" required />
                </div>

                <div class="mb-3">
                    <label for="Telefon" class="form-label">Număr de Telefon</label>
                    <input type="tel" id="Telefon" name="Telefon" class="form-control" pattern="07[0-9]{8}" title="Numărul de telefon trebuie să înceapă cu 07 și să fie format din 10 cifre." required />
                    <div class="form-text">Numărul de telefon trebuie să înceapă cu 07 și să fie format din 10 cifre.</div>
                </div>

                <div class="mb-3">
                    <label for="Adresa" class="form-label">Adresă</label>
                    <input type="text" id="Adresa" name="Adresa" class="form-control" value="@Model.Adresa" required />
                </div>

                <div class="mb-3">
                    <label for="MetodaPlata" class="form-label">Metodă de Plată</label>
                    <select id="MetodaPlata" name="MetodaPlata" class="form-select" onchange="toggleCardFields()" required>
                        <option value="Numerar">Numerar</option>
                    </select>
                </div>

                <div>
                    <p><strong>Total de plată:</strong> @Model.TotalDePlata.ToString("0.00") RON</p>
                </div>

                <div class="btn-group" role="group">
                    @if (Model.UserPoints != 0)
                    {
                        <input type="checkbox"
                               class="btn-check"
                               id="btn-check"
                               autocomplete="off"
                               asp-for="AplicaReducere" />
                        <label class="btn btn-outline-secondary" for="btn-check">Aplica reducere folosind puncte?</label>
                    }
                    <button type="submit" class="btn btn-success">Trimite comanda</button>
                    <a asp-page="Cos" class="btn btn-danger">Anulează</a>
                </div>
            </form>
        </div>
    </div>
</div>
