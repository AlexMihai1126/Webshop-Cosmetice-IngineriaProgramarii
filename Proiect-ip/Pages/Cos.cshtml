@page
@model Proiect_ip.Pages.CosModel
@{
    ViewData["Title"] = "Cosul de cumparaturi";
}

<div class="container mt-4">
    <h1 class="mb-4">Cosul de cumparaturi</h1>
    @if (Model.Produse.Count == 0)
    {
        <p class="text-muted">Cosul este gol.</p>
    }
    else
    {
        if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Produs</th>
                    <th>Cantitate</th>
                    <th>Actiuni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProduseCos)
                {
                    var cantitate = Model.Produse.Find(p => p.ProductId == item.IdProdus).Cantitate;
                    <tr>
                        <td>@item.Nume</td>
                        <td>
                            <form method="post" asp-page-handler="UpdateQuantity" asp-route-productId="@item.IdProdus" class="d-flex">
                                <div class="input-group mb-3">
                                    <input type="number" name="cantitate" value="@cantitate" class="form-control" min="1" required />
                                    <button type="submit" class="btn btn-primary btn-sm">Actualizeaza</button>
                                </div>
                            </form>
                        </td>
                        <td>
                            <a asp-page="/DetaliiProdus" asp-route-id="@item.IdProdus" class="btn btn-info me-2">Detalii</a>
                            <form method="post" asp-page-handler="RemoveFromCart" asp-route-productId="@item.IdProdus" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Sterge</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <form method="get" action="/DetaliiPlata">
            <button type="submit" class="btn btn-primary">Trimite Comanda</button>
        </form>


    }
</div>