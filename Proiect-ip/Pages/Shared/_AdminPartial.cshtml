@using Microsoft.AspNetCore.Identity
@using Proiect_ip.Areas.Identity.Data
@inject UserManager<Proiect_ipUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = false;

    if (user != null)
    {
        isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
    }
}

@if (isAdmin)
{
    <div>
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Admin <i class="bi bi-person-lock"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/AdaugaPuncteTest">Test sistem puncte</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Categorii/Overview">Categorii</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Comenzi/Overview">Comenzi</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Produse/Overview">Produse</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Vouchere/Overview">Vouchere</a></li>
                </ul>
            </li>
        </ul>
    </div>
}

