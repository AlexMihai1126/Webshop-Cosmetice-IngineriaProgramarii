@using Microsoft.AspNetCore.Identity
@using Proiect_ip.Areas.Identity.Data
@inject UserManager<Proiect_ipUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = false;

    if (user != null)
    {
        isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
    }
}

@if (isAdmin)
{
    <div>
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" asp-page="/Admin/AdaugaPuncteTest">Test sistem puncte</a></li>
                    <li><a class="dropdown-item" asp-page="/Admin/Branduri/Overview">Branduri</a></li>
                    <li><a class="dropdown-item" asp-page="/Admin/Categorii/Overview">Categorii</a></li>
                    <li><a class="dropdown-item" asp-page="/Admin/Comenzi">Comenzi</a></li>
                    <li><a class="dropdown-item" asp-page="/Admin/Produse/Overview">Produse</a></li>
                </ul>
            </li>
        </ul>
    </div>
}

