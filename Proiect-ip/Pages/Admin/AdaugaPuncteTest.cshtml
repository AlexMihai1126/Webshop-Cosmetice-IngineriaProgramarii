@page
@model Proiect_ip.Pages.Admin.AdaugaPuncteTestModel
@using Microsoft.AspNetCore.Identity
@using Proiect_ip.Areas.Identity.Data
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Testare sistem puncte";
}

<div class="container mt-5">
    <h2 class="text-center">Adaugă sau scade puncte utilizatorului logat</h2>
    <form method="post">
        <div class="mb-3">
            <label for="points" class="form-label">Număr de puncte de modificat</label>
            <input type="number" class="form-control" id="points" asp-for="PctDeModificat" required>
        </div>
        <div class="mb-3">
            <label for="points" class="form-label">Motiv schimbare?</label>
            <input type="text" class="form-control" id="motiv" asp-for="Motiv">
        </div>
        <div class="mb-3">
            <label for="points" class="form-label">Id comandă?</label>
            <input type="number" class="form-control" id="idcomanda" asp-for="IdCom">
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-outline-success">Modifică</button>
        </div>
    </form>

    @if (Model.Message != null)
    {
        <div class="alert alert-info mt-3">@Model.Message</div>
    }
</div>
