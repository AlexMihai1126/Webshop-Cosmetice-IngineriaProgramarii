@page
@model Proiect_ip.Pages.Admin.EditCategoriiModel
@{
    ViewData["Title"] = "Modificare categorie";
}
<div class="container">
    <h2 class="text-center mb-5">Modificare produs</h2>

    <form method="post" enctype="multipart/form-data">

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">ID</label>
            <div class="col-sm-8">
                <input class="form-control" value="@Model.CategorieProdus.Id" readonly disabled>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Nume</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="CategorieDto.Nume">
                <span asp-validation-for="CategorieDto.Nume" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Descriere</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="CategorieDto.Descriere">
                <span asp-validation-for="CategorieDto.Descriere" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Salvează</button>
                <a class="btn btn-danger" href="/Admin/Categorii" role="button">Anulează</a>
            </div>
        </div>

    </form>
</div>