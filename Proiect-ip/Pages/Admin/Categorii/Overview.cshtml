@page
@model CategoriiModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Admin categorii";
}
<div class="container-fluid">
    <h2 class="text-center mb-5">Lista de categorii</h2>

    <hr />

    <div class="d-grid gap-2">
        <a class='btn btn-success' href='/Admin/Categorii/Creare'>Categorie nouă</a>
    </div>

    <hr />
    @if (Model.Categorii.Count() == 0)
    {
        <div class="alert alert-danger" role="alert">
            Nu s-au găsit categorii.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nume</th>
                    <th>Descriere</th>
                    <th>Acțiuni</th>
                </tr>
            </thead>

            <tbody class="table-group-divider">

                @foreach (var cat in Model.Categorii)
                {
                    <tr>
                        <td>@cat.Id</td>
                        <td>@cat.NumeCateg</td>
                        <td>@cat.Descriere</td>
                        <td style="white-space:nowrap">
                            <button type="button" class="btn btn-sm btn-success" onclick="window.location.href='/Admin/Categorii/Edit?id=@cat.Id'">Modifică</button>
                            <button type="button" class="btn btn-sm btn-danger" onclick="window.location.href='/Admin/Categorii/Stergere?id=@cat.Id'">Șterge</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
