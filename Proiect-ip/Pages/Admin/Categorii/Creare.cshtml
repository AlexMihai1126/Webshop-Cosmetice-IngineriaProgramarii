@page
@model Proiect_ip.Pages.Admin.Categorii.CreateCategoriiModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Creare categorie";
}
<div class="container">
    <h2 class="text-center mb-5">Categorie nouă</h2>
    <hr />
    <form method="post">
        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Nume</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Categorie.Nume">
                <span asp-validation-for="Categorie.Nume" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Descriere</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Categorie.Descriere">
            </div>
        </div>

        <div class="mb-3 row">
            <div class="btn-group" role="group">
                <button type="submit" class="btn btn-outline-success">Salvează</button>
                <button type="button" class="btn btn-outline-danger" onclick="window.location.href='/Admin/Categorii/Overview'">Anulează</button>
            </div>
        </div>
    </form>
</div>