@page
@model Proiect_ip.Pages.Admin.Categorii.DeleteCategoriiModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Ștergere categorie";
}
<div class="container">
    <h2 class="text-center mb-5">Confirmare ștergere</h2>
    <hr />
    <h3 class="text-center">Sigur dorești să ștergi categoria?</h3>
    <br />
    <form method="post">
        <input type="hidden" name="id" value="@Model.CategorieProdus.Id" />

        <div class="mb-3 row">
            <div class="btn-group" role="group">
                <button type="submit" class="btn btn-outline-danger">Șterge</button>
                <button type="button" class="btn btn-outline-secondary" onclick="window.location.href='/Admin/Categorii/Overview'">Anulează</button>
            </div>
        </div>
    </form>
</div>