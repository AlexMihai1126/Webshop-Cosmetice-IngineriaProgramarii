@page
@model Proiect_ip.Pages.Admin.Branduri.EditBranduriModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Modificare brand";
}
<div class="container">
    <h2 class="text-center mb-5">Modificare brand</h2>

    <form method="post" enctype="multipart/form-data">

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">ID</label>
            <div class="col-sm-8">
                <input class="form-control" value="@Model.BrandProdus.BrandId" readonly disabled>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Nume</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="BrandDto.Nume">
                <span asp-validation-for="BrandDto.Nume" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Salvează</button>
                <a class="btn btn-danger" href="/Admin/Branduri/Overview" role="button">Anulează</a>
            </div>
        </div>

    </form>
</div>