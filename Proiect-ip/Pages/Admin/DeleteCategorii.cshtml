@page
@model Proiect_ip.Pages.Admin.DeleteCategoriiModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    <p>Aceasta este o pagina accesibila doar admin-ului.</p>
    ViewData["Title"] = "Ștergere categorie";
}
<div class="container">
    <h1 class="text-center mb-5">Confirmare ștergere</h1>
    <hr />
    <h2 class="text-center">Sigur dorești să ștergi categoria?</h2>
    <hr />
    <form method="post">
        <input type="hidden" name="id" value="@Model.CategorieProdus.Id" />

        <div class="mb-3 row">
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger">Șterge</button>
                <a class="btn btn-secondary" href="/Admin/Categorii" role="button">Anulează</a>
            </div>
        </div>
    </form>
</div>