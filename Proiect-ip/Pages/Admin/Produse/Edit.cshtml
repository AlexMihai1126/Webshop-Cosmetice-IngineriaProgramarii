@page
@model Proiect_ip.Pages.Admin.Produse.EditProduseModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    ViewData["Title"] = "Modifica produs";
}

<div class="container">
    <h2 class="text-center mb-5">Editare produs</h2>
    <hr />
    <form method="post" enctype="multipart/form-data">

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Brand</label>
            <div class="col-sm-8">
                <select class="form-select" asp-for="ProdusDto.BrandId" asp-items="@Model.Branduri"></select>
                <span asp-validation-for="ProdusDto.BrandId" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Nume</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ProdusDto.Nume">
                <span asp-validation-for="ProdusDto.Nume" class="text-danger"></span>
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Descriere</label>
            <div class="col-sm-8">
                <textarea class="form-control" asp-for="ProdusDto.Descriere"></textarea>
                <span asp-validation-for="ProdusDto.Descriere" class="text-danger"></span>
            </div>
        </div>


        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Pret</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ProdusDto.Pret">
                <span asp-validation-for="ProdusDto.Pret" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Stoc</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ProdusDto.Stoc">
                <span asp-validation-for="ProdusDto.Stoc" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label">Categorie</label>
            <div class="col-sm-8">
                <select class="form-select" asp-for="ProdusDto.CategorieId" asp-items="@Model.Categorii"></select>
                <span asp-validation-for="ProdusDto.CategorieId" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 col-form-label" title="Pentru a salva imaginea, trebuie sa fie apasat butonul de Update Imagine.">Imagine nouă (*)</label>
            <div class="col-sm-8">
                <input class="form-control" type="file" asp-for="ProdusDto.Image" accept="image/png, image/jpeg" />
                <span asp-validation-for="ProdusDto.Image" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <div class="btn-group" role="group">
                <input class="btn-check" type="checkbox" asp-for="UpdateImagine" id="updateImagineCheckbox" />
                <label class="btn btn-outline-secondary" for="updateImagineCheckbox">Update Imagine</label>
                <button type="submit" class="btn btn-outline-success">Salvează</button>
                <button type="button" class="btn btn-outline-danger" onclick="window.location.href='/Admin/Produse/Overview'">Anulează</button>
            </div>
        </div>

    </form>
</div>