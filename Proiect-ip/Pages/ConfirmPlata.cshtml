@page
@model Proiect_ip.Pages.ConfirmPlataModel
@{
    ViewData["Title"] = "Confirmare procesare comandă";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h2 class="mb-4">@ViewData["Title"]</h2>

            @if (Model.Status == "Success")
            {
                <div class="alert alert-success" role="alert">
                    <p class="mb-2">Comanda a fost procesată cu succes!</p>
                    <p>Vă mulțumim pentru achiziția dumneavoastră!</p>
                </div>
                <div class="d-grid gap-2 d-sm-flex justify-content-center mt-3">
                    <a href="/Produse" class="btn btn-success btn-lg">Continuă cumpărăturile</a>
                    <a href="/" class="btn btn-secondary btn-lg">Înapoi la Magazin</a>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <p class="mb-2">Comanda nu a putut fi procesată. Vă rugăm să încercați din nou sau să anulați comanda.</p>
                </div>
                <div class="d-grid gap-2 d-sm-flex justify-content-center mt-3">
                    <a href="/Cos" class="btn btn-warning btn-lg">Reîncepe procesul de achiziționare</a>
                </div>
            }
        </div>
    </div>
</div>
