@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Ștergere cont";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <strong>Odată șterse, datele dvs. nu mai pot fi recuperate.</strong>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vă rugăm să confirmați cu parola dvs." />
                <label asp-for="Input.Password" class="form-label">Parolă</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-outline-danger" type="submit">Ștergere date și închidere cont</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
